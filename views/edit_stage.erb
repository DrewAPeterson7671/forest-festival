<h1>Update <%=@stage.name() %></h1>

<form action="/stages/<%= @stage.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename Stage!</label>
  <input id="name" name="name" type="text">

  <button type="submit" name="button">Update!</button>
</form>

<form action="/stages/<%= @stage.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" name="button">Delete Stage!</button>
</form>

<form action="/stages/<%= @stage.id() %>/artists" method="post">
  <label for="name">Add artist to this stage!</label>
  <input id="name" name="name" type="text">
  <button type="submit" name="button">Add!</button>
</form>


<a href="/stages">Take me back!</a>
